{% extends 'layouts/public_layout.twig' %}
{% block content %}
	<form method="POST">
		<div class="mx-auto flex w-full max-w-sm flex-col gap-6 mt-5">
			<div class="flex flex-col items-center">
				<h1 class="text-3xl font-semibold">Login</h1>
				<p class="text-sm">Logueate para acceder a tu cuenta</p>
			</div>
			<div
				class="form-group mt-3">
				<!-- Campo para el email -->
				<div class="form-field">
					<label class="form-label" for="email">Direcci√≥n Email</label>
					<input placeholder="Escribe tu email" type="email" name='email' class="input max-w-full" id='email' required/>
					<label class="form-label" for="email">
						<span class="form-label-alt" id="errorMail"></span>
					</label>
				</div>
				<div
					class="form-field pt-5">
					<!-- Boton -->
					<div class="form-control justify-between">
