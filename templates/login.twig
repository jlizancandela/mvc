{% extends "layouts/public_layout.twig" %}
{% block content %}
	<main class="flex flex-col flex-1">
		<form method="POST" action="login">

			<div class="mx-auto flex w-full max-w-sm flex-col gap-6 mt-5">
				<div class="flex flex-col items-center">
					<h1 class="text-3xl font-semibold">
						Login
					</h1>
					<p class="text-sm">
						Logueate para acceder a tu cuenta
					</p>
				</div>
				<div
					class="form-group mt-3">
					<!-- Campo para el email -->
					<div class="form-field">
						<label class="form-label" for="email">
							Dirección Email
							<span id="errormail" class="text-red-600 font-bold"></span>
						</label>
						<input placeholder="Escribe tu email" type="email" name="email" class="input max-w-full" id="email" required/>
					</div>
					<div class="form-field">
						<label for="password" class='text-sm mb-0'>Contraseña</label>
						<div class="form-control relative w-full">
							<input type="password" class="input input-lg max-w-full pl-10" name="password" placeholder="Enter password"/>
							<span class="absolute inset-y-0 left-3 inline-flex items-center">
								<i class="eye text-xl bi bi-eye-slash"></i>
							</span>
						</div>

					</div>
					<div
						class="form-field pt-5">
						<!-- Boton -->
						<div class="form-control justify-between">
							<button class="btn btn-primary w-full">
								Sign in
							</button>
						</div>
						{% include 'components/error.twig'%}
					</div>
					<a href="reset_password" class="ml-2">
						No te acuerdas?
					</a>
					<a href="register" class="ml-2">
						No tienes cuenta?
					</a>
				</div>
			</div>
		</form>
		<script src="{{padre}}js/login.js"></script>
	</main>
{% endblock %}
